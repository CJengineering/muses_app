<%= form_with(model: key_word) do |form| %>
  <% if key_word.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(key_word.errors.count, "error") %> prohibited this key_word from being saved:</h2>

      <ul>
        <% key_word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card card-plain w-50">
      <div class="  mb-3" >
        <%= form.label "Keyword",class:"form-label" %>
        <%= form.text_area :key_word, class:"form-control",placeholder: ' put your key word',style:"border: 1px solid lightgray"  %>
      </div>

      <div class="mb-3">
        <%= form.label :rss_url, class:"form-label" %>
        <%= form.text_field :rss_url,class:"form-control",placeholder: 'Paste your rss feed here' ,style:"border: 1px solid lightgray"%>
      </div>

      <div class="">
        <%= form.label :is_factiva, class:"form-label" %>
        <%= form.check_box :factiva %>
      </div>
   
      <div class="text-center">
        <%= form.submit class:"btn btn-lg bg-gradient-primary btn-lg w-50 mt-4 mb-0" %>
      </div>
  </div>

  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/material-dashboard.min.js?v=3.0.4"></script>
<% end %>
