<p style="color: green"><%= notice %></p>

<h1>Keywords</h1>

<%= link_to "New key word", new_key_word_path,class:"badge badge-sm bg-gradient-success" %>
 <div class="container-fluid py-4">
      <div class='row'>
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <div class ="d-flex justify-content-around">
                <h6 class="text-white text-capitalize ps-3"> Keywords</h6>
                  <div>
                      <%= form_tag(key_words_path, method: "get", class: "search-form") do %>
                              <%= text_field_tag :search, params[:search], placeholder: "Search articles by name" %>
                          <%= submit_tag "Search", class: "btn btn-primary" %>
                      <% end %>
                </div>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr >
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Key Word</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">See more</th>
         
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
               <% @key_words.each do |key_word| %>
                <%= render key_word %>

                <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>



