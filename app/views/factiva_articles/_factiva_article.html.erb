


    <tr data-controller='switch' id="<%= dom_id factiva_article %>" <%= factiva_article.posted ? 'class=  posted-on-webflow red w-50': 'class= ' %>>

                      <td  <%= factiva_article.posted ? 'class=   posted-on-webflow w-50 ': 'class= w-50 ' %>>
                        <div class="d-flex px-2 py-1 ">

                          <div class="d-flex flex-column justify-content-center w-75 my-second-text   ">
                            <%=  factiva_article.title%>
                     
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0"><%= factiva_article.key_word.key_word%></p>
                
                      </td>
                      <td class="align-middle text-center text-sm" data-controller="copy">
                         <%= link_to "https://www.google.com/search?q=#{factiva_article.title}+#{factiva_article.description}+#{factiva_article.author}", target: :_blank do %>
                                <span class="green-text">Search in google</span>   
                        <% end %>  
                       </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold"><%= factiva_article.published.strftime("%B %d, %Y")%></span>
                      </td>

                     <td class="align-middle">
                         <%= render "switch_form", factiva_article: factiva_article %>
                      </td>
    </tr>